{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "default_agent": "plan",
  "autoupdate": true,
   "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2-2512": {
          "name": "devstral-small",
          "limit": {
            "context": 25000,
            "output": 5000,
          }
        },
        "mistralai/ministral-3-3b": {
          "name": "ministral-3",
          "limit": {
            "context": 25000,
            "output": 5000,
          }
        },
      }
    },
    "lmstudio-terra": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (terra)",
      "options": {
        "baseURL": "http://192.168.8.169:1234/v1"
      },
      "models": {
        "qwen/qwen3-coder-30b": {
          "name": "qwen3-coder",
          "limit": {
            "context": 50000,
            "output": 5000,
          }
        },
        "nvidia-nemotron-3-nano-30b-a3b": {
          "name": "nemotron-3-nano",
          "limit": {
            "context": 50000,
            "output": 5000,
          }
        }
      }
    }
  }
}
